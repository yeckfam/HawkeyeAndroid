<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".Register"
    android:weightSum="1">

    <!-- Register progress -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30884dp"
        android:layout_height="62dp"
        android:background="#cdcecf"
        android:src="@mipmap/hawkeyelogo" />

        <LinearLayout android:id="@+id/register_detail_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <EditText android:id="@+id/LastName" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Last Name"
                android:singleLine="true" />

            <EditText android:id="@+id/FirstName" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="First Name"
                android:singleLine="true" />

            <EditText android:id="@+id/input_email" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Email"
                android:singleLine="true" />

            <EditText android:id="@+id/input_password" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Password"
                android:maxLines="1" android:singleLine="true" />

            <Button android:id="@+id/register_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="REGISTER"
                android:textStyle="bold" />

        </LinearLayout>

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CALL 911"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
